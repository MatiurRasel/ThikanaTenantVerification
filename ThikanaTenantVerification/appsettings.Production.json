{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=MATIUR-RASEL;Database=ThikanaTenantDB;User ID=sa;Password=sa1234;TrustServerCertificate=True;MultipleActiveResultSets=True;Connect Timeout=10000;Application Name=TTDB;"
  },
  "AppSettings": {
    "Environment": "Production",
    "BaseUrl": "https://thikana.gov.bd"
  },
  "SmsSettings": {
    "TestMode": false,
    "Provider": "Banglalink"
  },
  "EmailSettings": {
    "TestMode": false,
    "UseSSL": true
  },
  "ApiSettings": {
    "EnableMockApi": false
  },
  "SecuritySettings": {
    "RequireTwoFactor": true
  },
  "CacheSettings": {
    "EnableRedis": true,
    "RedisConnection": "redis:6379"
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/thikana/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ]
  }
}