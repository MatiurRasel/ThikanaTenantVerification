                        <li id="req-uppercase"><i class="fas fa-circle"></i> অন্তত ১ টি বড় হাতের অক্ষর</li>
                        <li id="req-lowercase"><i class="fas fa-circle"></i> অন্তত ১ টি ছোট হাতের অক্ষর</li>
                        <li id="req-number"><i class="fas fa-circle"></i> অন্তত ১ টি সংখ্যা</li>
                        <li id="req-special"><i class="fas fa-circle"></i> অন্তত ১ টি বিশেষ অক্ষর (!@@#$%^&*)</li>
                    </ul>
                </div>

                <div class="action-buttons">
                    <button type="button" onclick="switchStep(2)" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        পূর্ববর্তী
                    </button>
                    <button type="button" onclick="completeRegistration()" class="btn btn-success btn-lg">
                        <i class="fas fa-user-plus"></i>
                        রেজিস্ট্রেশন সম্পূর্ণ করুন
                    </button>
                </div>
            </form>
        </div>

        <!-- Registration Footer -->
        <div class="text-center mt-4">
            <p class="text-muted">
                ইতিমধ্যে একাউন্ট আছে? 
                <a href="@Url.Action("Login", "Home")" class="text-primary font-weight-bold">
                    লগইন করুন
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentStep = 1;
        let nidData = null;
        let otpTimer = null;
        let timeLeft = 300; // 5 minutes in seconds
        let canResend = false;

        // Initialize form
        document.addEventListener('DOMContentLoaded', function() {
            initializeOTPInputs();
            startOTPTimer();
            updateProgressBar();
        });

        // Fill demo credentials
        function fillDemoCredentials(nid, mobile) {
            document.querySelector('input[name="idNumber"]').value = nid;
            document.querySelector('input[name="mobileNumber"]').value = mobile;
        }

        // Switch between steps
        function switchStep(step) {
            if (step < 1 || step > 3) return;
            
            // Hide all steps
            document.querySelectorAll('.step-content').forEach(el => {
                el.classList.remove('active');
            });
            
            // Remove active from all navigation buttons
            document.querySelectorAll('.form-step').forEach(el => {
                el.classList.remove('active');
            });
            
            // Show selected step
            document.getElementById(`step${step}`).classList.add('active');
            document.querySelectorAll('.form-step')[step - 1].classList.add('active');
            
            currentStep = step;
            updateProgressBar();
        }

        // Update progress bar
        function updateProgressBar() {
            const progress = (currentStep / 3) * 100;
            document.getElementById('progressFill').style.width = `${progress}%`;
        }

        // Verify NID and move to OTP step
        async function verifyNID() {
            const idNumber = document.querySelector('input[name="idNumber"]').value;
            const mobileNumber = document.querySelector('input[name="mobileNumber"]').value;

            // Validate inputs
            if (!idNumber || !mobileNumber) {
                showAlert('অনুগ্রহ করে NID এবং মোবাইল নম্বর দিন', 'danger');
                return;
            }

            // Validate NID length
            if (![10, 13, 14, 17].includes(idNumber.length)) {
                showAlert('অনুগ্রহ করে সঠিক জাতীয় পরিচয়পত্র বা জন্ম নিবন্ধন নম্বর দিন (১০/১৩/১৪/১৭ ডিজিট)', 'danger');
                return;
            }

            // Validate mobile number
            if (!/^01[3-9]\d{8}$/.test(mobileNumber)) {
                showAlert('অনুগ্রহ করে সঠিক মোবাইল নম্বর দিন', 'danger');
                return;
            }

            // Show loading
            const nextBtn = document.querySelector('#step1 .btn-primary');
            const originalText = nextBtn.innerHTML;
            nextBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> যাচাই করা হচ্ছে...';
            nextBtn.disabled = true;

            try {
                // Send verification request
                const response = await fetch('@Url.Action("VerifyNID", "Home")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        idNumber: idNumber,
                        mobileNumber: mobileNumber
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Store NID data and move to OTP step
                    nidData = result.nidData;
                    document.getElementById('otpMobileNumber').textContent = mobileNumber;
                    
                    // Simulate sending OTP
                    setTimeout(() => {
                        showAlert('OTP আপনার মোবাইল নম্বরে পাঠানো হয়েছে', 'success');
                        switchStep(2);
                        
                        // Auto-fill OTP for demo
                        setTimeout(() => {
                            fillOTP('123456');
                        }, 500);
                    }, 1000);
                } else {
                    showAlert(result.message || 'NID যাচাইকরণ ব্যর্থ হয়েছে', 'danger');
                }
            } catch (error) {
                showAlert('একটি ত্রুটি হয়েছে। পরে চেষ্টা করুন', 'danger');
                console.error('NID verification error:', error);
            } finally {
                // Reset button
                nextBtn.innerHTML = originalText;
                nextBtn.disabled = false;
            }
        }

        // Initialize OTP inputs
        function initializeOTPInputs() {
            const otpInputs = document.querySelectorAll('.otp-input');
            otpInputs.forEach((input, index) => {
                input.addEventListener('input', function(e) {
                    if (this.value.length === 1) {
                        if (index < otpInputs.length - 1) {
                            otpInputs[index + 1].focus();
                        }
                    }
                    
                    updateOTPValue();
                });

                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace' && !this.value && index > 0) {
                        otpInputs[index - 1].focus();
                    }
                });
            });
        }

        // Update OTP value from inputs
        function updateOTPValue() {
            const otpInputs = document.querySelectorAll('.otp-input');
            let otp = '';
            otpInputs.forEach(input => {
                otp += input.value;
            });
            document.getElementById('otpInput').value = otp;
        }

        // Fill OTP automatically
        function fillOTP(code) {
            const otpInputs = document.querySelectorAll('.otp-input');
            const digits = code.split('');
            
            otpInputs.forEach((input, index) => {
                if (index < digits.length) {
                    input.value = digits[index];
                }
            });
            
            updateOTPValue();
        }

        // Start OTP timer
        function startOTPTimer() {
            const timerElement = document.getElementById('otpTimer');
            const resendBtn = document.getElementById('resendBtn');
            const resendText = document.getElementById('resendText');
            
            otpTimer = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                
                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(otpTimer);
                    timerElement.textContent = '00:00';
                    resendBtn.disabled = false;
                    canResend = true;
                    startResendCooldown();
                } else {
                    timeLeft--;
                }
            }, 1000);
        }

        // Start resend cooldown
        function startResendCooldown() {
            let cooldown = 60;
            const resendText = document.getElementById('resendText');
            const resendBtn = document.getElementById('resendBtn');
            
            const cooldownTimer = setInterval(() => {
                resendText.textContent = `আবার পাঠান (${cooldown})`;
                cooldown--;
                
                if (cooldown < 0) {
                    clearInterval(cooldownTimer);
                    resendText.textContent = 'আবার পাঠান';
                    resendBtn.disabled = false;
                }
            }, 1000);
        }

        // Verify OTP and move to password step
        async function verifyOTP() {
            const otp = document.getElementById('otpInput').value;

            if (otp.length !== 6) {
                showAlert('অনুগ্রহ করে ৬ ডিজিটের OTP দিন', 'danger');
                return;
            }

            // For demo, accept 123456 or any 6-digit number
            if (otp === '123456' || /^\d{6}$/.test(otp)) {
                showAlert('OTP যাচাই সফল!', 'success');
                setTimeout(() => {
                    switchStep(3);
                }, 1000);
            } else {
                showAlert('ভুল OTP। ডেমো OTP: 123456', 'danger');
            }
        }

        // Check password strength
        function checkPasswordStrength(password) {
            const requirements = {
                length: password.length >= 8,
                uppercase: /[A-Z]/.test(password),
                lowercase: /[a-z]/.test(password),
                number: /[0-9]/.test(password),
                special: /[!@@#$%^&*]/.test(password)
            };

            // Update requirement indicators
            Object.keys(requirements).forEach(key => {
                const element = document.getElementById(`req-${key}`);
                if (requirements[key]) {
                    element.classList.add('valid');
                    element.innerHTML = '<i class="fas fa-check-circle"></i> ' + element.textContent;
                } else {
                    element.classList.remove('valid');
                    element.innerHTML = '<i class="fas fa-circle"></i> ' + element.textContent;
                }
            });
        }

        // Check password match
        function checkPasswordMatch() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const matchDiv = document.getElementById('passwordMatch');

            if (password && confirmPassword) {
                if (password === confirmPassword) {
                    matchDiv.style.display = 'flex';
                    matchDiv.style.color = '#10b981';
                    matchDiv.innerHTML = '<i class="fas fa-check-circle"></i><span>পাসওয়ার্ড মিলেছে</span>';
                } else {
                    matchDiv.style.display = 'flex';
                    matchDiv.style.color = '#ef4444';
                    matchDiv.innerHTML = '<i class="fas fa-times-circle"></i><span>পাসওয়ার্ড মিলছে না</span>';
                }
            } else {
                matchDiv.style.display = 'none';
            }
        }

        // Complete registration
        async function completeRegistration() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Validate password
            if (!password || password.length < 8) {
                showAlert('অনুগ্রহ করে কমপক্ষে ৮ অক্ষরের পাসওয়ার্ড দিন', 'danger');
                return;
            }

            if (password !== confirmPassword) {
                showAlert('পাসওয়ার্ড মিলছে না', 'danger');
                return;
            }

            // Check password requirements
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasNumber = /[0-9]/.test(password);
            const hasSpecial = /[!@@#$%^&*]/.test(password);

            if (!hasUppercase || !hasLowercase || !hasNumber || !hasSpecial) {
                showAlert('পাসওয়ার্ডে কমপক্ষে ১টি বড় হাতের অক্ষর, ১টি ছোট হাতের অক্ষর, ১টি সংখ্যা এবং ১টি বিশেষ অক্ষর থাকতে হবে', 'danger');
                return;
            }

            // Show loading
            const completeBtn = document.querySelector('#step3 .btn-success');
            const originalText = completeBtn.innerHTML;
            completeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> রেজিস্ট্রেশন করা হচ্ছে...';
            completeBtn.disabled = true;

            try {
                // Get form data
                const idNumber = document.querySelector('input[name="idNumber"]').value;
                const mobileNumber = document.querySelector('input[name="mobileNumber"]').value;

                // Send registration request
                const response = await fetch('@Url.Action("CompleteRegistration", "Home")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        idNumber: idNumber,
                        mobileNumber: mobileNumber,
                        password: password,
                        confirmPassword: confirmPassword
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('রেজিস্ট্রেশন সফল! লগইন পৃষ্ঠায় নিয়ে যাওয়া হচ্ছে...', 'success');
                    
                    // Redirect to login after 2 seconds
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Login", "Home")';
                    }, 2000);
                } else {
                    showAlert(result.message || 'রেজিস্ট্রেশন ব্যর্থ হয়েছে', 'danger');
                }
            } catch (error) {
                showAlert('একটি ত্রুটি হয়েছে। পরে চেষ্টা করুন', 'danger');
                console.error('Registration error:', error);
            } finally {
                // Reset button
                completeBtn.innerHTML = originalText;
                completeBtn.disabled = false;
            }
        }

        // Show alert message
        function showAlert(message, type) {
            // Remove existing alerts
            const existingAlerts = document.querySelectorAll('.alert');
            existingAlerts.forEach(alert => alert.remove());

            // Create new alert
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
            `;

            // Insert after header
            const header = document.querySelector('.registration-header');
            header.parentNode.insertBefore(alertDiv, header.nextSibling);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Resend OTP
        document.getElementById('resendBtn').addEventListener('click', function() {
            if (!canResend) return;

            // Reset timer
            clearInterval(otpTimer);
            timeLeft = 300;
            canResend = false;
            this.disabled = true;
            
            // Start new timer
            startOTPTimer();
            
            // Show message
            showAlert('নতুন OTP পাঠানো হয়েছে', 'success');
            
            // Auto-fill demo OTP
            setTimeout(() => {
                fillOTP('123456');
            }, 1000);
        });
    </script>
}