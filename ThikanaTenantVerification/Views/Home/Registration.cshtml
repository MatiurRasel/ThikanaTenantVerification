        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @ViewBag.Error
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        <!-- Progress Bar -->
        <div class="progress-bar">
            <div class="progress-fill" id="progressFill" style="width: 33%"></div>
        </div>

        <!-- Form Navigation -->
        <div class="form-navigation">
            <button class="form-step active" onclick="switchStep(1)">
                <i class="fas fa-id-card"></i>
                NID তথ্য
            </button>
            <button class="form-step" onclick="switchStep(2)">
                <i class="fas fa-sms"></i>
                OTP যাচাই
            </button>
            <button class="form-step" onclick="switchStep(3)">
                <i class="fas fa-lock"></i>
                পাসওয়ার্ড
            </button>
        </div>

        <!-- Step 1: NID Information -->
        <div id="step1" class="step-content active">
            <form id="nidForm">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-id-card"></i>
                        জাতীয় পরিচয়পত্র নম্বর *
                    </label>
                    <input type="text"
                           name="idNumber"
                           class="form-control"
                           placeholder="১০, ১৩, ১৪ বা ১৭ ডিজিটের NID নম্বর"
