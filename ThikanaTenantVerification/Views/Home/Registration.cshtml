            </div>

            <form id="otpForm">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-key"></i>
                        ৬ ডিজিটের OTP কোড *
                    </label>
                    <div class="otp-input-container">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                        <input type="text" class="otp-input" maxlength="1" pattern="\d">
                    </div>
                    <input type="hidden" name="otp" id="otpInput">
                </div>

                <div class="otp-timer">
                    OTP কোডটি <strong id="otpTimer">05:00</strong> মিনিটের জন্য বৈধ
                </div>

                <div class="resend-otp">
                    <button type="button" id="resendBtn" class="resend-btn" disabled>
                        <i class="fas fa-redo"></i>
                        <span id="resendText">আবার পাঠান (60)</span>
                    </button>
                </div>

                <div class="action-buttons">
                    <button type="button" onclick="switchStep(1)" class="btn btn-outline">
                        <i class="fas fa-arrow-left"></i>
                        পূর্ববর্তী
                    </a>
                    <button type="button" onclick="verifyOTP()" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-right"></i>
                        পরবর্তী ধাপ
                    </button>
                </div>
            </form>
        </div>

        <!-- Step 3: Password Setup -->
        <div id="step3" class="step-content">
            <div class="text-center mb-4">
                <div class="password-icon mb-3">
                    <i class="fas fa-lock fa-3x" style="color: #1a237e;"></i>
                </div>
                <h4>পাসওয়ার্ড সেট করুন</h4>
                <p class="text-muted">নিরাপদ পাসওয়ার্ড দিন</p>
            </div>

            <form id="passwordForm">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i>
                        পাসওয়ার্ড *
                    </label>
                    <input type="password"
                           name="password"
                           id="password"
                           class="form-control"
                           placeholder="পাসওয়ার্ড দিন"
                           minlength="8"
                           required
                           onkeyup="checkPasswordStrength(this.value)">
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i>
                        পাসওয়ার্ড নিশ্চিত করুন *
                    </label>
                    <input type="password"
                           name="confirmPassword"
                           id="confirmPassword"
                           class="form-control"
                           placeholder="পুনরায় পাসওয়ার্ড দিন"
                           minlength="8"
                           required
                           onkeyup="checkPasswordMatch()">
                    <div class="password-match" id="passwordMatch" style="display: none; color: #ef4444; font-size: 0.85rem; margin-top: 0.5rem;">
                        <i class="fas fa-times-circle"></i>
                        <span>পাসওয়ার্ড মিলছে না</span>
                    </div>
                </div>

                <!-- Password Requirements -->
