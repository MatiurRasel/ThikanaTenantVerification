                    <label class="form-label">
                        <i class="fas fa-mobile-alt"></i>
                        মোবাইল নম্বর *
                    </label>
                    <input type="tel"
                           name="mobileNumber"
                           class="form-control"
                           placeholder="০১XXXXXXXXX"
                           pattern="01[3-9]\d{8}"
                           required>
                </div>

