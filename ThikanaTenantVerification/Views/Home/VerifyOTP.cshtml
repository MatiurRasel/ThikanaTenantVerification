@{
    var mobileNumber = ViewBag.MobileNumber?.ToString() ?? "";
    var nidData = ViewBag.NIDData?.ToString();
    var step = ViewBag.RegistrationStep?.ToString() ?? "otp";
    var userId = ViewBag.UserId?.ToString();
    
    // Store OTP in ViewBag when moving from OTP step to password step
    var storedOTP = ViewBag.StoredOTP?.ToString() ?? "123456"; // Default for demo
}
<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(step == "otp" ? "OTP যাচাই" : "পাসওয়ার্ড সেট") - ঠিকানা যাচাইকরণ</title>
    <link href="https://fonts.maateen.me/solaiman-lipi/font.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* ALL YOUR CSS STYLES REMAIN THE SAME */
        :root {
            --police-blue: #0d2b6c;
            --police-red: #e4002b;
            --police-gold: #ffc107;
            --police-light-blue: #1e88e5;
            --dark-bg: #0a1a36;
            --light-bg: #f0f4f8;
            --white: #ffffff;
            --text-dark: #1e293b;
            --text-light: #64748b;
            --success-color: #10b981;
            --error-color: #ef4444;
            --warning-color: #f59e0b;
            --gradient-blue: linear-gradient(135deg, #0d2b6c 0%, #1e3a8a 100%);
            --gradient-gold: linear-gradient(135deg, #ffc107 0%, #ffd54f 100%);
            --shadow-strong: 0 20px 60px rgba(0, 0, 0, 0.3);
            --shadow-light: 0 8px 30px rgba(0, 0, 0, 0.1);
            --radius-lg: 20px;
            --radius-md: 12px;
            --radius-sm: 8px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'SolaimanLipi', 'Inter', sans-serif;
            background: var(--gradient-blue);
            color: var(--text-dark);
            line-height: 1.6;
            min-height: 100vh;
        }

        /* Header */
        .police-header {
            background: rgba(13, 43, 108, 0.98);
            backdrop-filter: blur(10px);
            border-bottom: 2px solid var(--police-red);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 0.6rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
        }

        .police-emblem {
            width: 45px;
            height: 45px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--police-gold);
        }

        .police-emblem i {
            color: var(--police-blue);
            font-size: 1.4rem;
        }

        .logo-text {
            color: var(--white);
            line-height: 1.2;
        }

        .logo-main {
            font-size: 1.3rem;
            font-weight: 700;
            display: block;
        }

        .logo-sub {
            font-size: 0.8rem;
            opacity: 0.9;
        }

        /* Main Content */
        .main-content {
            min-height: calc(100vh - 120px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
        }

        /* OTP Container */
        .otp-container {
            width: 100%;
            max-width: 500px;
        }

        .otp-card {
            background: var(--white);
            border-radius: var(--radius-lg);
            padding: 2.5rem;
            box-shadow: var(--shadow-strong);
        }

        /* Progress Steps */
        .progress-steps {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 2rem;
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .step-number {
            width: 40px;
            height: 40px;
            background: #e2e8f0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }

        .step.active .step-number {
            background: var(--police-blue);
            color: var(--white);
            transform: scale(1.1);
        }

        .step.completed .step-number {
            background: var(--success-color);
            color: var(--white);
        }

        .step-label {
            font-size: 0.8rem;
            color: var(--text-light);
            text-align: center;
        }

        .step-line {
            flex: 1;
            height: 2px;
            background: #e2e8f0;
            margin: 0 1rem;
            position: relative;
            top: -20px;
        }

        /* Header */
        .otp-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .otp-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-gold);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            color: var(--police-blue);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .otp-title {
            font-size: 1.8rem;
            color: var(--police-blue);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .otp-subtitle {
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        /* Mobile Info */
        .mobile-info {
            background: rgba(13, 43, 108, 0.05);
            border-radius: var(--radius-md);
            padding: 1rem;
            margin-bottom: 1.5rem;
            text-align: center;
            border: 1px solid rgba(13, 43, 108, 0.1);
        }

        .mobile-number {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--police-blue);
            letter-spacing: 1px;
        }

        /* Demo OTP */
        .demo-otp {
            background: linear-gradient(135deg, #0d2b6c 0%, #1e88e5 100%);
            border-radius: var(--radius-md);
            padding: 1.5rem;
            margin-bottom: 2rem;
            color: var(--white);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .demo-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .demo-code {
            background: rgba(255, 255, 255, 0.2);
            padding: 1rem;
            border-radius: var(--radius-sm);
            margin-bottom: 0.75rem;
        }

        .demo-code code {
            font-family: 'Courier New', monospace;
            font-size: 2.5rem;
            font-weight: 800;
            letter-spacing: 0.5rem;
            color: var(--police-gold);
        }

        .demo-info {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        /* OTP Input */
        .otp-input-container {
            margin: 2rem 0;
        }

        .otp-inputs {
            display: flex;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .otp-digit {
            width: 60px;
            height: 70px;
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            border: 2px solid #e2e8f0;
            border-radius: var(--radius-sm);
            transition: all 0.3s ease;
            font-family: 'Courier New', monospace;
        }

        .otp-digit:focus {
            border-color: var(--police-blue);
            box-shadow: 0 0 0 3px rgba(13, 43, 108, 0.1);
            outline: none;
        }

        .otp-digit.error {
            border-color: var(--error-color);
            background-color: rgba(239, 68, 68, 0.05);
        }

        .otp-digit.success {
            border-color: var(--success-color);
            background-color: rgba(16, 185, 129, 0.05);
        }

        .otp-hint {
            text-align: center;
            color: var(--text-light);
            font-size: 0.9rem;
            margin-top: 1rem;
        }

        /* Timer */
        .otp-timer {
            text-align: center;
            margin: 1.5rem 0;
            color: var(--text-light);
            font-size: 0.95rem;
        }

        .timer-value {
            font-weight: 700;
            color: var(--police-red);
            font-size: 1.2rem;
        }

        .timer-expired {
            color: var(--error-color);
            animation: blink 1s infinite;
        }

        @@keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Password Section */
        .password-section {
            margin-top: 2rem;
            animation: fadeIn 0.5s ease;
        }

        .section-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-size: 1.3rem;
            color: var(--police-blue);
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            color: var(--police-blue);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-group {
            position: relative;
        }

        .input-group i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1.1rem;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid #e2e8f0;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: 'SolaimanLipi', sans-serif;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--police-blue);
            box-shadow: 0 0 0 3px rgba(13, 43, 108, 0.1);
        }

        .form-control.error {
            border-color: var(--error-color);
            background-color: rgba(239, 68, 68, 0.05);
        }

        .form-control.success {
            border-color: var(--success-color);
            background-color: rgba(16, 185, 129, 0.05);
        }

        /* Password Strength */
        .password-strength {
            margin-top: 0.75rem;
        }

        .strength-meter {
            height: 6px;
            background: #e2e8f0;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            border-radius: 3px;
            transition: all 0.3s ease;
        }

        .strength-text {
            font-size: 0.8rem;
            color: var(--text-light);
        }

        /* Password Requirements */
        .password-requirements {
            background: #f8fafc;
            border-radius: var(--radius-sm);
            padding: 1.25rem;
            margin-top: 1rem;
            border: 1px solid #e2e8f0;
        }

        .requirements-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0.75rem;
        }

        .requirement-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            color: var(--text-light);
        }

        .requirement-item.valid {
            color: var(--success-color);
        }

        .requirement-item.invalid {
            color: var(--error-color);
        }

        /* Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            padding: 0.875rem 1.75rem;
            border-radius: var(--radius-md);
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            flex: 1;
            font-family: 'SolaimanLipi', sans-serif;
        }

        .btn-primary {
            background: var(--gradient-blue);
            color: var(--white);
            box-shadow: 0 10px 25px rgba(13, 43, 108, 0.3);
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(13, 43, 108, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-secondary {
            background: transparent;
            color: var(--police-blue);
            border: 2px solid var(--police-blue);
        }

        .btn-secondary:hover {
            background: var(--police-blue);
            color: var(--white);
        }

        .btn-success {
            background: var(--success-color);
            color: var(--white);
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
        }

        .btn-success:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
        }

        /* Alert */
        .alert {
            padding: 1rem;
            border-radius: var(--radius-sm);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: slideIn 0.5s ease;
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: var(--error-color);
        }

        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.2);
            color: var(--success-color);
        }

        /* Password Toggle */
        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-light);
            cursor: pointer;
            font-size: 1.1rem;
        }

        /* Loading Spinner */
        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: var(--white);
            animation: spin 1s ease-in-out infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Footer */
        .otp-footer {
            background: var(--dark-bg);
            color: var(--white);
            padding: 1rem 0;
            text-align: center;
            font-size: 0.85rem;
            margin-top: 2rem;
        }

        /* Animations */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@keyframes slideIn {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }

        .shake {
            animation: shake 0.5s ease-in-out;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .otp-card {
                padding: 1.5rem;
            }
            
            .otp-digit {
                width: 50px;
                height: 60px;
                font-size: 1.8rem;
            }
            
            .demo-code code {
                font-size: 2rem;
                letter-spacing: 0.3rem;
            }
            
            .requirements-grid {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
            }
            
            .header-container {
                padding: 0 1rem;
            }
        }

        @@media (max-height: 768px) {
            .main-content {
                padding: 1rem;
                min-height: calc(100vh - 100px);
            }
            
            .otp-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Compact Header -->
    <header class="police-header">
        <div class="header-container">
            <a href="/" class="logo-container">
                <div class="police-emblem">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="logo-text">
                    <span class="logo-main">ঠিকানা যাচাইকরণ</span>
                    <span class="logo-sub">বাংলাদেশ পুলিশ</span>
                </div>
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="otp-container">
            <div class="otp-card">
                <!-- Progress Steps -->
                <div class="progress-steps">
                    <div class="step completed">
                        <div class="step-number">১</div>
                        <div class="step-label">NID যাচাই</div>
                    </div>
                    <div class="step-line"></div>
                    <div class="step @(step == "otp" ? "active" : "completed")">
                        <div class="step-number">২</div>
                        <div class="step-label">OTP যাচাই</div>
                    </div>
                    <div class="step-line"></div>
                    <div class="step completed">
                        <div class="step-number">✓</div>
                        <div class="step-label">সম্পন্ন</div>
                    </div>
                </div>

                <!-- Header -->
                <div class="otp-header">
                    <div class="otp-icon">
                        @if (step == "otp")
                        {
                            <i class="fas fa-mobile-alt"></i>
                        }
                        else
                        {
                            <i class="fas fa-lock"></i>
                        }
                    </div>
                    <h2 class="otp-title">OTP যাচাই করুন</h2>
                    <p class="otp-subtitle">নতুন ব্যবহারকারী নিবন্ধন - OTP যাচাই করুন</p>
                </div>

                <!-- Mobile Info -->
                <div class="mobile-info">
                    <p>OTP পাঠানো হয়েছে নিচের নম্বরে:</p>
                    <div class="mobile-number">@mobileNumber</div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewBag.Error
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        @TempData["Success"]
                    </div>
                }



                <!-- OTP Input Form -->
                <form method="post" action="@Url.Action("VerifyOTP", "Home")" id="otpForm" novalidate>
                    @Html.AntiForgeryToken()
                    
                    <!-- CRITICAL: Store OTP in a hidden field ALWAYS -->
                    <input type="hidden" name="otp" id="otpValue" value="@storedOTP" />
                    
                    <input type="hidden" name="isNewUser" value="@(step == "password" ? "true" : "false")" />
                    @if (userId != null)
                    {
                        <input type="hidden" name="userId" value="@userId" />
                    }

                    <!-- OTP Input Section -->
                    <div class="otp-input-container">
                        <div class="otp-inputs">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 1)" autocomplete="off" data-index="1">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 2)" autocomplete="off" data-index="2">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 3)" autocomplete="off" data-index="3">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 4)" autocomplete="off" data-index="4">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 5)" autocomplete="off" data-index="5">
                            <input type="text" class="otp-digit" maxlength="1" pattern="\d" 
                                   oninput="moveToNext(this, 6)" autocomplete="off" data-index="6">
                        </div>
                        <p class="otp-hint">ডেমো OTP: <strong>123456</strong></p>
                    </div>

                    <!-- Timer -->
                    <div class="otp-timer">
                        OTP কোডটি <span class="timer-value" id="timer">05:00</span> মিনিটের জন্য বৈধ
                    </div>

                    <!-- NO PASSWORD STEP - OTP-based authentication only -->
                    <!-- User can optionally set password later from profile settings -->

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="@Url.Action("Login", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            ফিরে যান
                        </a>
                        
                        <button type="submit" id="verifyBtn" class="btn btn-primary">
                            <i class="fas fa-check-circle"></i>
                            OTP যাচাই করুন
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="otp-footer">
        <div style="max-width: 1400px; margin: 0 auto; padding: 0 1.5rem;">
            <p>&copy; <script>document.write(new Date().getFullYear());</script> ঠিকানা যাচাইকরণ সিস্টেম - বাংলাদেশ পুলিশ। সকল অধিকার সংরক্ষিত।</p>
        </div>
    </footer>

    <script>
        // Global variables
        let timeLeft = 300; // 5 minutes
        let timerInterval = null;
        let isFormSubmitting = false;

        // Initialize based on step
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-fill demo OTP for testing
            setTimeout(() => {
                fillDemoOTP();
            }, 100);
            
            // Start timer
            startTimer();
            
            // Auto-focus first OTP input
            setTimeout(() => {
                const firstInput = document.querySelector('.otp-digit[data-index="1"]');
                if (firstInput) firstInput.focus();
            }, 150);
            
            // Prevent form resubmission
            preventFormResubmission();
            
            // Add form validation
            setupFormValidation();
        });

        // Password functions removed - OTP-only authentication

        // Setup form validation
        function setupFormValidation() {
            const form = document.getElementById('otpForm');
            if (!form) return;
            
            form.addEventListener('submit', function(e) {
                if (!validateOTP()) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                const submitBtn = document.getElementById('verifyBtn');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<div class="spinner"></div> প্রক্রিয়াকরণ হচ্ছে...';
                }
                
                isFormSubmitting = true;
                return true;
            });
        }

        // Validate OTP
        function validateOTP() {
            const otpValueField = document.getElementById('otpValue');
            const otp = otpValueField ? otpValueField.value : '';
            const otpInputs = document.querySelectorAll('.otp-digit');
            
            if (!otp || otp.length !== 6) {
                showMessage('অনুগ্রহ করে ৬ ডিজিটের OTP দিন', 'error');
                
                // Highlight empty fields
                otpInputs.forEach(input => {
                    if (!input.value) {
                        input.classList.add('error');
                        input.classList.remove('success');
                    }
                });
                
                // Focus first empty field
                for (let input of otpInputs) {
                    if (!input.value) {
                        input.focus();
                        break;
                    }
                }
                return false;
            }
            
            return true;
        }

        // Password validation removed - OTP-only authentication

        // Move to next OTP input
        function moveToNext(input, index) {
            // Allow only digits
            input.value = input.value.replace(/\D/g, '');
            
            // Remove error/success classes
            input.classList.remove('error', 'success');
            
            if (input.value.length === 1) {
                const inputs = document.querySelectorAll('.otp-digit');
                if (index < inputs.length) {
                    inputs[index].focus();
                }
            }
            
            updateOTPValue();
        }

        // Update OTP value in hidden field
        function updateOTPValue() {
            const inputs = document.querySelectorAll('.otp-digit');
            let otp = '';
            inputs.forEach(input => {
                otp += input.value;
            });
            
            const otpValueField = document.getElementById('otpValue');
            if (otpValueField) {
                otpValueField.value = otp;
            }
            
            // Visual feedback
            inputs.forEach(input => {
                if (input.value) {
                    input.classList.add('success');
                } else {
                    input.classList.remove('success');
                }
            });
        }

        // Fill demo OTP (for testing)
        function fillDemoOTP() {
            const inputs = document.querySelectorAll('.otp-digit');
            const demoOTP = '123456';
            
            inputs.forEach((input, index) => {
                if (index < demoOTP.length) {
                    input.value = demoOTP[index];
                    input.classList.add('success');
                    // Dispatch input event to trigger updateOTPValue
                    const event = new Event('input', { bubbles: true });
                    input.dispatchEvent(event);
                }
            });
        }

        // Password fill function removed - OTP-only authentication

        // Start OTP timer
        function startTimer() {
            const timerElement = document.getElementById('timer');
            
            if (!timerElement) return;
            
            timerInterval = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                
                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    timerElement.textContent = '00:00';
                    timerElement.classList.add('timer-expired');
                    
                    // Disable verify button
                    const verifyBtn = document.getElementById('verifyBtn');
                    if (verifyBtn) {
                        verifyBtn.disabled = true;
                        verifyBtn.innerHTML = '<i class="fas fa-clock"></i> OTP এর মেয়াদ শেষ';
                    }
                } else {
                    timeLeft--;
                }
            }, 1000);
        }

        // Password validation functions removed - OTP-only authentication

        // Show message
        function showMessage(message, type) {
            // Remove existing alerts (except server errors)
            const existingAlerts = document.querySelectorAll('.alert:not(.alert-danger):not(.alert-success)');
            existingAlerts.forEach(alert => alert.remove());
            
            // Create new alert
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'error' ? 'danger' : 'success'}`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'error' ? 'exclamation-circle' : 'check-circle'}"></i>
                ${message}
            `;
            
            // Insert after header
            const header = document.querySelector('.otp-header');
            if (header && header.parentNode) {
                header.parentNode.insertBefore(alertDiv, header.nextSibling);
            }
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode && !alertDiv.classList.contains('alert-danger') && !alertDiv.classList.contains('alert-success')) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Prevent form resubmission
        function preventFormResubmission() {
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        }
    </script>
