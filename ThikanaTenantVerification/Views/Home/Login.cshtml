        // Update stepper
        function updateStepper(step) {
            // Reset all steps
            document.querySelectorAll('.step').forEach(s => {
                s.classList.remove('active', 'completed');
            });

            // Set current step as active
            document.getElementById(`step${step}`).classList.add('active');

            // Set previous steps as completed
            for (let i = 1; i < step; i++) {
                document.getElementById(`step${i}`).classList.add('completed');
            }
        }


                 // Verify NID and mobile
        async function verifyNID() {
            const idNumber = document.getElementById('idNumber').value;
            const mobileNumber = document.getElementById('mobileNumber').value;
            const btn = document.getElementById('verifyNIDBtn');
            const btnText = document.getElementById('verifyNIDText');
            const spinner = document.getElementById('verifyNIDSpinner');

            // Validate inputs
            if (!idNumber || idNumber.length < 10) {
                alert('অনুগ্রহ করে সঠিক NID নম্বর দিন (১০ ডিজিট বা বেশি)');
                return;
            }

            if (!mobileNumber || mobileNumber.length !== 11 || !mobileNumber.startsWith('01')) {
                alert('অনুগ্রহ করে সঠিক মোবাইল নম্বর দিন (১১ ডিজিট, ০১ দিয়ে শুরু)');
                return;
            }

            // Show loading
            btn.disabled = true;
            btnText.textContent = 'যাচাই হচ্ছে...';
            spinner.style.display = 'block';

            try {
                console.log('Sending registration request...');

                // Get anti-forgery token - IMPORTANT!
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                console.log('Anti-forgery token found:', !!token);
                if (token) {
                    console.log('Token value exists:', token.value.length > 0);
                }

                // Method 1: Using FormData (recommended)
                const formData = new FormData();
                formData.append('idNumber', idNumber);
                formData.append('mobileNumber', mobileNumber);

                // Add anti-forgery token if found
                if (token && token.value) {
                    formData.append('__RequestVerificationToken', token.value);
                } else {
                    console.warn('Warning: No anti-forgery token found!');
                }

                const response = await fetch('/Home/Register', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        // Don't set Content-Type for FormData - let browser set it
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                });

                console.log('Response status:', response.status, response.statusText);

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Server error response:', errorText);

                    if (response.status === 400) {
                        // Try different approach if 400 persists
                        console.log('Trying alternative method...');
                        return await tryAlternativeMethod(idNumber, mobileNumber, token);
                    }

                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();
                console.log('Success!', result);

                if (result.success) {
                    window.location.href = '/Home/VerifyOTP';
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('ত্রুটি: ' + error.message + '\nদয়া করে পৃষ্ঠাটি রিফ্রেশ করুন এবং আবার চেষ্টা করুন।');
            } finally {
                btn.disabled = false;
                btnText.textContent = 'পরবর্তী';
                spinner.style.display = 'none';
            }
        }

        // Alternative method if first one fails
        async function tryAlternativeMethod(idNumber, mobileNumber, token) {
            console.log('Trying alternative method (URLSearchParams)...');

            const params = new URLSearchParams();
            params.append('idNumber', idNumber);
            params.append('mobileNumber', mobileNumber);

            if (token && token.value) {
                params.append('__RequestVerificationToken', token.value);
            }

            const response = await fetch('/Home/Register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'Accept': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: params.toString()
            });

            if (!response.ok) {
                const errorText = await response.text();
                throw new Error(`Alternative method failed: ${response.status} - ${errorText}`);
            }

            return await response.json();
        }

        // Quick test function
        function testAntiForgeryToken() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                console.log('✅ Anti-forgery token FOUND!');
                console.log('Token length:', token.value.length);
                console.log('Token starts with:', token.value.substring(0, 20) + '...');
