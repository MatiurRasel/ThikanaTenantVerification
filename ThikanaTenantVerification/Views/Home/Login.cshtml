                alert('ত্রুটি: ' + error.message);
            } finally {
                btn.disabled = false;
                btnText.innerHTML = '<i class="fas fa-paper-plane"></i> OTP পাঠান';
                spinner.style.display = 'none';
            }
        }

        // Verify Login OTP
        async function verifyLoginOtp() {
            const mobileNumber = document.getElementById('loginMobile').value;
            const otpCode = document.getElementById('loginOtp').value;
            const btn = document.getElementById('verifyOtpBtn');
            const btnText = document.getElementById('verifyOtpText');
            const spinner = document.getElementById('verifyOtpSpinner');

            if (!otpCode || otpCode.length !== 6) {
                alert('অনুগ্রহ করে ৬ ডিজিটের OTP দিন');
                return;
            }

            // Show loading
            btn.disabled = true;
            btnText.innerHTML = 'যাচাই করা হচ্ছে...';
            spinner.style.display = 'inline-block';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                const formData = new FormData();
                formData.append('mobileNumber', mobileNumber);
                formData.append('otpCode', otpCode);
                if (token && token.value) {
                    formData.append('__RequestVerificationToken', token.value);
                }

                const response = await fetch('/Home/VerifyLoginOtp', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Redirect to dashboard
                    if (result.redirectUrl) {
                        window.location.href = result.redirectUrl;
                    } else {
                        window.location.href = '/Home/Dashboard';
                    }
                } else {
                    alert(result.message || 'ভুল OTP কোড');
                    btn.disabled = false;
                    btnText.innerHTML = '<i class="fas fa-check-circle"></i> OTP যাচাই করুন';
                    spinner.style.display = 'none';
