                e.target.value = value;
            });

        });

        
        // Request Login OTP
        async function requestLoginOtp() {
            const mobileNumber = document.getElementById('loginMobile').value;
            const btn = document.getElementById('requestOtpBtn');
            const btnText = document.getElementById('requestOtpText');
            const spinner = document.getElementById('requestOtpSpinner');

            if (!mobileNumber || mobileNumber.length !== 11 || !mobileNumber.startsWith('01')) {
