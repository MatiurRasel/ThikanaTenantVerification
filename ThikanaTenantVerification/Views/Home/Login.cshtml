        // Back to step 1
        function backToStep1() {
            document.getElementById('loginStep2').style.display = 'none';
            document.getElementById('loginStep1').style.display = 'block';
            document.getElementById('formTitle').textContent = 'অ্যাকাউন্টে প্রবেশ করুন';
            document.getElementById('formSubtitle').textContent = 'আপনার মোবাইল নম্বরে OTP পাঠান';
            document.getElementById('loginOtp').value = '';
        }

        // OTP Timer
        let otpTimeLeft = 300; // 5 minutes
        let otpTimerInterval = null;

        function startOtpTimer() {
            const timerElement = document.getElementById('otpTimer');
            if (!timerElement) return;

            otpTimeLeft = 300;
            if (otpTimerInterval) clearInterval(otpTimerInterval);

            otpTimerInterval = setInterval(() => {
                const minutes = Math.floor(otpTimeLeft / 60);
                const seconds = otpTimeLeft % 60;
                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

                if (otpTimeLeft <= 0) {
                    clearInterval(otpTimerInterval);
                    timerElement.textContent = '00:00';
                    timerElement.style.color = 'var(--error-color)';
                    document.getElementById('verifyOtpBtn').disabled = true;
                } else {
                    otpTimeLeft--;
                }
            }, 1000);
        }
