            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                const formData = new FormData();
                formData.append('mobileNumber', mobileNumber);
                if (token && token.value) {
                    formData.append('__RequestVerificationToken', token.value);
                }

                const response = await fetch('/Home/RequestLoginOtp', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // Show step 2
                    document.getElementById('loginStep1').style.display = 'none';
                    document.getElementById('loginStep2').style.display = 'block';
                    document.getElementById('otpMobileNumber').textContent = mobileNumber;
                    document.getElementById('formTitle').textContent = 'OTP যাচাই করুন';
                    document.getElementById('formSubtitle').textContent = 'আপনার মোবাইল নম্বরে পাঠানো OTP দিন';

                    // Show demo OTP if available
                    if (result.demoOtp) {
                        document.getElementById('demoOtpCode').textContent = result.demoOtp;
                        document.getElementById('demoOtpBox').style.display = 'block';
                        // Auto-fill OTP
                        setTimeout(() => {
