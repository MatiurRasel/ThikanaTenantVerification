                // Fallback method if AJAX fails
        function useFallbackRegistration(idNumber, mobileNumber) {
            console.log('Using fallback registration method...');

            // Create a hidden form and submit it
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Home/RegisterDirect'; // Create this endpoint as fallback

            const nidInput = document.createElement('input');
            nidInput.type = 'hidden';
            nidInput.name = 'idNumber';
            nidInput.value = idNumber;

            const mobileInput = document.createElement('input');
            mobileInput.type = 'hidden';
            mobileInput.name = 'mobileNumber';
            mobileInput.value = mobileNumber;

            form.appendChild(nidInput);
            form.appendChild(mobileInput);

            // Add anti-forgery token if exists
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenClone = token.cloneNode(true);
                form.appendChild(tokenClone);
            }

            document.body.appendChild(form);
            form.submit();
        }

        // Auto-fill demo credentials on page load
        document.addEventListener('DOMContentLoaded', function() {
