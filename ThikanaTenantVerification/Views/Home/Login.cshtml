                console.error('Error:', error);
                alert('ত্রুটি: ' + error.message);
                btn.disabled = false;
                btnText.innerHTML = '<i class="fas fa-check-circle"></i> OTP যাচাই করুন';
                spinner.style.display = 'none';
            }
