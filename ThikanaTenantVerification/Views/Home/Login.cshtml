@{
    ViewData["Title"] = "লগইন - ঠিকানা যাচাইকরণ";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .login-page {
            min-height: 100vh;
            background: var(--primary-gradient);
            position: relative;
            overflow: hidden;
        }

        .login-background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='1440' height='1024' viewBox='0 0 1440 1024' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0H1440V1024H0V0Z' fill='url(%23paint0_linear_1_2)'/%3E%3Cpath d='M-94.7319 291.839C8.07076 198.228 214.167 107.882 364.636 145.267C515.106 182.652 497.466 330.076 582.314 423.687C667.162 517.298 841.146 493.306 991.616 456.179C1142.09 419.052 1267.83 377.024 1370.63 283.413L1440 1024H0V748.067C-20.3259 651.638 -197.535 385.45 -94.7319 291.839Z' fill='white' fill-opacity='0.05'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear_1_2' x1='720' y1='0' x2='720' y2='1024' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%231a237e'/%3E%3Cstop offset='1' stop-color='%23000d47'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E") no-repeat center/cover;
        }

        .login-container {
            position: relative;
            z-index: 1;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: var(--space-xl);
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: var(--border-radius-xl);
            box-shadow: var(--shadow-xl);
            width: 100%;
            max-width: 480px;
            padding: var(--space-xl);
            animation: fadeIn 0.6s ease;
        }

        .login-header {
            text-align: center;
            margin-bottom: var(--space-xl);
        }

        .login-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--space-sm);
            margin-bottom: var(--space-md);
        }

        .login-logo-icon {
            width: 48px;
            height: 48px;
            background: var(--primary-gradient);
            border-radius: var(--border-radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .login-title {
            font-size: 2rem;
            font-weight: 700;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: var(--space-xs);
        }

        .login-subtitle {
            color: var(--text-light);
            font-size: 1rem;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: var(--space-lg);
        }

        .form-footer {
            text-align: center;
            margin-top: var(--space-lg);
            color: var(--text-light);
            font-size: 0.875rem;
        }

        .login-features {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--space-sm);
            margin-top: var(--space-xl);
            padding-top: var(--space-lg);
            border-top: 1px solid #e2e8f0;
        }

        .feature-item {
            text-align: center;
            padding: var(--space-sm);
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            margin: 0 auto var(--space-xs);
        }

        .feature-text {
            font-size: 0.75rem;
            color: var(--text-light);
        }
    </style>
}

<div class="login-page">
    <div class="login-background"></div>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <div class="login-logo-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h1 class="login-title">ঠিকানা</h1>
                </div>
                <p class="login-subtitle">ভাড়াটিয়া যাচাইকরণ সিস্টেম</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger fade-in">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewBag.Error
                </div>
            }

            <form method="post" action="@Url.Action("Login", "Home")">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-id-card"></i>
                        জাতীয় পরিচয়পত্র নম্বর
                    </label>
                    <div class="input-wrapper with-icon">
                        <i class="fas fa-id-card input-icon"></i>
                        <input type="text"
                               name="idNumber"
                               class="form-control"
                               placeholder="১০, ১৩, ১৪ বা ১৭ ডিজিটের নম্বর দিন"
                               maxlength="17"
                               required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-mobile-alt"></i>
                        মোবাইল নম্বর
                    </label>
                    <div class="input-wrapper with-icon">
                        <i class="fas fa-phone input-icon"></i>
                        <input type="tel"
                               name="mobileNumber"
                               class="form-control"
                               placeholder="০১XXXXXXXXX"
                               pattern="01[3-9]\d{8}"
                               required>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">মনে রাখুন</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i>
                        লগইন করুন
                    </button>
                </div>
            </form>

            <div class="form-footer">
                <p>প্রথমবার ব্যবহার করছেন? <a href="#" class="text-primary">রেজিস্ট্রেশন করুন</a></p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline btn-sm">
                    <i class="fas fa-arrow-left"></i>
                    হোম পেজে ফিরে যান
                </a>
            </div>

            <div class="login-features">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="feature-text">১০০% নিরাপদ</div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <div class="feature-text">দ্রুত প্রক্রিয়া</div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="feature-text">সরকারি ডাটাবেজ</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation animation
        document.querySelector('form').addEventListener('submit', function(e) {
            const inputs = this.querySelectorAll('input[required]');
            let isValid = true;

            inputs.forEach(input => {
                if (!input.value.trim()) {
                    isValid = false;
                    input.parentElement.classList.add('shake');
                    setTimeout(() => {
                        input.parentElement.classList.remove('shake');
                    }, 500);
                }
            });

            if (!isValid) {
                e.preventDefault();
            }
        });

        // Add shake animation
        const style = document.createElement('style');
        style.textContent = `
            .shake {
                animation: shake 0.5s ease;
            }
        @@keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-10px); }
                75% { transform: translateX(10px); }
            }
        `;
        document.head.appendChild(style);
    </script>
}